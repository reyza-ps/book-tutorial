<%= form_for @article do |f| %>
  
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "article") %> prohibited this article from being saved :
        <ul>
          <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </h2>
    </div>
  <% end %>

  <div class="input-field col s12">
    <%= f.text_field :title, type: "text", class: "validate" %>
    <%= f.label :title, "data-error": "wrong", "data-success": "right", style: "font-size: 20px;" %>
  </div>

  <div class="col s12" style="margin-top: 50px;">
    <%= f.label :body %>
  </div>

  <div class="input-field col s12">
    <%= f.cktext_area :body, type: "text" %>
  </div>

  <!-- Switch -->
  <div class="col s12" style="margin-top: 50px;">
    <%= f.label :status_article %>
  </div>

  <div class="switch col s12">
    <label>
      Inactive
      <%= f.check_box(:status_article) %>
      <span class="lever"></span>
      Active
    </label>
  </div>

  <div align="right" style="margin-right: 20px;">
    <%= button_tag(type: "submit", class: "btn btn-floating btn-large pulse red accent-2") do %>
      <i class="material-icons">add</i>
    <% end %> 
  </div>

<% end %>